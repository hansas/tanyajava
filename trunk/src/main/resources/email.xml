<?xml version="1.0" encoding="MacRoman"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"

       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
          http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">
    <bean id="mailSender" class="org.springframework.mail.javamail.JavaMailSenderImpl">
        <property name="host" value="smtp.google.com"/>
    </bean>

    <!-- this is a template message that we can pre-load with default state -->
    <bean id="templateDownloadEmail" class="org.springframework.mail.SimpleMailMessage">
        <property name="from" value="tanya.jv@gmail.com"/>
        <property name="subject" value="Download buku Java Desktop"/>
    </bean>

</beans>
