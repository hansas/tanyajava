<?xml version="1.0" encoding="MacRoman"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"

       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
          http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <bean id="emailSender" class="org.springframework.mail.javamail.JavaMailSenderImpl">
        <property name="defaultEncoding" value="UTF-8"/>
        <property name="host" value="${email.smtp}"/>
        <property name="port" value="${email.smtp.port}"/>
        <property name="username" value="${email.username}"/>
        <property name="password" value="${email.password}"/>
        <property name="javaMailProperties">
            <value>
                mail.debug=false
                mail.smtp.starttls.enable=true
              	mail.smtp.auth=true
                mail.smtp.socketFactory.class=javax.net.ssl.SSLSocketFactory
                mail.smtp.socketFactory.fallback=false
            </value>
        </property>
    </bean>

    <!-- this is a template message that we can pre-load with default state -->
    <bean id="templateDownloadEmail" class="org.springframework.mail.SimpleMailMessage">
        <property name="subject" value="Download Buku Java Desktop - Ifnu Bima"/>
    </bean>
    <bean id="emailTemplateEngine" class="org.apache.velocity.app.VelocityEngine" init-method="init"/>


</beans>
